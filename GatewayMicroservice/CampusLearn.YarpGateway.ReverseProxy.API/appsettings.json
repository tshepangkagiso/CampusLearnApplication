{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1435;Database=UserProfileDb;User Id=sa;Password=Password123!;TrustServerCertificate=true;",
    "RabbitMQ": "amqp://guest:guest@localhost:5672"
  },
  "Seq": {
    "Url": "http://localhost:5341"
  },
  "MinIO": {
    "Endpoint": "http://localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin123"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users-profile-management-route": {
        "ClusterId": "users-profile-management-cluster",
        "Match": { "Path": "user/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "topics-management-route": {
        "ClusterId": "topics-management-cluster",
        "Match": { "Path": "topic/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "forum-management-route": {
        "ClusterId": "forum-management-cluster",
        "Match": { "Path": "forum/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "media-content-route": {
        "ClusterId": "media-content-cluster",
        "Match": { "Path": "media/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "private-messaging-route": {
        "ClusterId": "private-messaging-cluster",
        "Match": { "Path": "messages/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "notifications-route": {
        "ClusterId": "notifications-cluster",
        "Match": { "Path": "notifications/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }

    },
    "Clusters": {
      "users-profile-management-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:6000/" }
        }
      },
      "topics-management-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:6100" }
        }
      },
      "forum-management-cluster": {
        "Destinations": {
