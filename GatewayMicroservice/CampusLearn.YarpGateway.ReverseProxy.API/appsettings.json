        }
      },
      "private-messaging-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:6500" }
        }
      },
      "notifications-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:6300" }
        }
      }
    }
  }
}
